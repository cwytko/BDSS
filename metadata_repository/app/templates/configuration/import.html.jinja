{% extends "layout.html.jinja" %}

{% block page_header %}Import Configuration{% endblock %}

{% block content %}
<form action="{{ url_for('configuration.import_configuration') }}" enctype="multipart/form-data" method="POST">
    <div class="form-group {% if upload_error %}has-error{% endif %}">
        <label for="conf_file">Upload Configuration File</label>
        <input name="conf_file" type="file">
        {%- if upload_error -%}
            <p class="help-block">{{ upload_error }}</p>
        {%- endif -%}
    </div>
    <input class="btn btn-primary" type="submit" value="Import">
</form>

<hr>

<form action="{{ url_for('configuration.import_configuration') }}" method="POST">
    <div class="form-group {% if url_error %}has-error{% endif %}">
        <label for="from_url">Import From URL</label>
        <input class="form-control" name="from_url" type="text">
        <p class="help-block">If importing from another metadata repository, enter its configuration export URL.
            <br>Ex: For a metadata repository at http://example.com/bdss, the export URL would be http://example.com/bdss/configuration/export.</p>
        {%- if url_error -%}
            <p class="help-block">{{ url_error }}</p>
        {%- endif -%}
    </div>
    <input class="btn btn-primary" type="submit" value="Import">
</form>

<hr>
<p style="margin-top:20px;"><a href="{{ url_for('configuration.index') }}"><span class="glyphicon glyphicon-chevron-left"></span>Back</a></p>
{% endblock %}
